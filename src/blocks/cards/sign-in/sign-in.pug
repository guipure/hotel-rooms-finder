include ../../input/input
include ../../button/button

mixin sign-in
    form.sign-in
        .sign-in__title Войти
        .sign-in__email
            +input({placeholder: 'Email', size: 'large'})
        .sign-in__pass
            +input({placeholder: 'Пароль', size: 'large'})
        .sign-in__button
            +button({theme: 'long', value: 'войти'})
        .sign-in__sign-up Нет аккаунта на Toxin?
            .sign-in__sign-up-btn
                +button({theme: 'purple-border', value: 'создать'})