include ../blocks/footer-small/footer-small

block variables
  - const isProdEnv = htmlWebpackPlugin.options.currentEnv === 'production';

doctype html
html
  head
    meta(charset="UTF-8")
    meta(name="viewport" content="width=device-width, initial-scale=1.0")
    link(rel="apple-touch-icon" sizes="180x180" href="./assets/favicons/apple-touch-icon.png")
    link(rel="icon" type="image/png" sizes="32x32" href="./assets/favicons/favicon-32x32.png")
    link(rel="icon" type="image/png" sizes="16x16" href="./assets/favicons/favicon-16x16.png")
    link(rel="mask-icon" href="./assets/favicons/safari-pinned-tab.svg" color="#5bbad5")
    link(rel="shortcut icon" href="./assets/favicons/favicon.ico")
    meta(name="msapplication-TileColor" content="#603cba")
    meta(name="theme-color" content="#ffffff")
    block title
  body.base__body
    header
      +header({
        menu: [
          {item: 'О нас'},
          {item: 'Услуги', list: ['Услуга 1', 'Услуга 2', 'Услуга 3']},
          {item: 'Вакансии'},
          {item: 'Новости'},
          {item: 'Соглашения', list: ['Соглашение 1', 'Соглашение 2', 'Соглашение 3']}
        ],
        isLoggedIn: false,
        login: 'войти',
        register: 'зарегистрироваться'
      })
    block content
    footer.base__footer
      .base__footer-large
        +footer-large({
          info: 'Бронирование номеров в лучшем отеле 2019 года по версии ассоциации «Отельные взгляды»',
          menus: [
            {
              title: 'Навигация',
              items: [
                'О нас',
                'Новости',
                'Служба поддержки',
                'Услуги'
              ]
            },
            {
              title: 'О нас',
              items: [
                'О сервисе',
                'Наша команда',
                'Вакансии',
                'Инвесторы'
              ]
            },
            {
              title: 'Служба поддержки',
              items: [
                'Соглашения',
                'Сообщества',
                'Связь с нами'
              ]
            }
          ],
          subscription: {
            title: 'Подписка',
            info: 'Получайте специальные предложения и новости сервиса'
          },
          copyright: 'Copyright © 2018 Toxin отель. Все права защищены.'
        })
      .base__footer-small
        +footer-small('Copyright © 2018 Toxin отель. Все права защищены.')